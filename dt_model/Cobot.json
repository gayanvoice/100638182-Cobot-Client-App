{
  "@context": "dtmi:dtdl:context;2",
  "@id": "dtmi:com:example:Cobot;1",
  "@type": "Interface",
  "displayName": "Cobot",
  "description": "Reports elapsed time of the Cobot.",
  "contents": [
    {
      "@type": [
        "Telemetry",
        "ElapsedTime"
      ],
      "name": "elapsed_time",
      "displayName" : "Elapsed Time",
      "description" : "Time elapsed since the controller was started in seconds.",
      "schema": "double",
      "unit": "degreeCelsius"
    },
    {
      "@type": "Command",
      "name": "getMaxMinReport",
      "displayName": "Get Max-Min report.",
      "description": "This command returns the max, min and average temperature from the specified time to the current time.",
      "request": {
        "name": "since",
        "displayName": "Since",
        "description": "Period to return the max-min report.",
        "schema": "dateTime"
      },
      "response": {
        "name" : "tempReport",
        "displayName": "Temperature Report",
        "schema": {
          "@type": "Object",
          "fields": [
            {
              "name": "maxTemp",
              "displayName": "Max temperature",
              "schema": "double"
            },
            {
              "name": "minTemp",
              "displayName": "Min temperature",
              "schema": "double"
            },
            {
              "name" : "avgTemp",
              "displayName": "Average Temperature",
              "schema": "double"
            },
            {
              "name" : "startTime",
              "displayName": "Start Time",
              "schema": "dateTime"
            },
            {
              "name" : "endTime",
              "displayName": "End Time",
              "schema": "dateTime"
            }
          ]
        }
      }
    },
    {
      "@type": "Command",
      "name": "startCobotControl",
      "request": {
        "name": "payload",
        "displayName": "Payload",
        "schema": "string"
      },
       "response": {
        "name" : "response",
        "displayName": "Response",
        "schema": {
          "@type": "Object",
          "fields": [
            {
              "name": "executeTime",
              "displayName": "Execute Time",
              "schema": "string"
            }
          ]
        }
      }
    }
  ]
}
